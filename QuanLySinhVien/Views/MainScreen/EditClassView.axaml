<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:tittlebars="clr-namespace:CustomTitleBarTemplate.Views.CustomTitleBars"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="QuanLySinhVien.Views.MainScreen.EditClassView"
		xmlns:vm="using:QuanLySinhVien.ViewModels.MainScreen"
	    x:DataType="vm:EditClassViewModel"
        Title="EditClassView">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="1.75*" />
				<RowDefinition />
			</Grid.RowDefinitions>

			<!--Title-->

			<Path
				Grid.Row="0"
				HorizontalAlignment="Left"
                VerticalAlignment="Top"
				Margin="25,20,0,0" Width="30" Height="30" Data="M16.19 2H7.81C4.17 2 2 4.17 2 7.81V16.18C2 19.83 4.17 22 7.81 22H16.18C19.82 22 21.99 19.83 21.99 16.19V7.81C22 4.17 19.83 2 16.19 2ZM10.95 17.51C10.66 17.8 10.11 18.08 9.71 18.14L7.25 18.49C7.16 18.5 7.07 18.51 6.98 18.51C6.57 18.51 6.19 18.37 5.92 18.1C5.59 17.77 5.45 17.29 5.53 16.76L5.88 14.3C5.94 13.89 6.21 13.35 6.51 13.06L10.97 8.6C11.05 8.81 11.13 9.02 11.24 9.26C11.34 9.47 11.45 9.69 11.57 9.89C11.67 10.06 11.78 10.22 11.87 10.34C11.98 10.51 12.11 10.67 12.19 10.76C12.24 10.83 12.28 10.88 12.3 10.9C12.55 11.2 12.84 11.48 13.09 11.69C13.16 11.76 13.2 11.8 13.22 11.81C13.37 11.93 13.52 12.05 13.65 12.14C13.81 12.26 13.97 12.37 14.14 12.46C14.34 12.58 14.56 12.69 14.78 12.8C15.01 12.9 15.22 12.99 15.43 13.06L10.95 17.51ZM17.37 11.09L16.45 12.02C16.39 12.08 16.31 12.11 16.23 12.11C16.2 12.11 16.16 12.11 16.14 12.1C14.11 11.52 12.49 9.9 11.91 7.87C11.88 7.76 11.91 7.64 11.99 7.57L12.92 6.64C14.44 5.12 15.89 5.15 17.38 6.64C18.14 7.4 18.51 8.13 18.51 8.89C18.5 9.61 18.13 10.33 17.37 11.09Z" Stretch="Fill" >
				<Path.Fill>
					<LinearGradientBrush>
						<GradientStop Color="#48CAE4" Offset="1"/>
						<GradientStop Color="#ADF4B9" Offset="0.3"/>
					</LinearGradientBrush>
				</Path.Fill>
			</Path>

			<Border
				Grid.Row="0"
				Margin="65,20,0,0"
				
				CornerRadius="25">
				<TextBlock
					Width="300"
					Height="50"
					HorizontalAlignment="Left"
                    VerticalAlignment="Top"
					Foreground="#023E8A"
                    FontSize="24"
                    FontWeight="DemiBold"
                    Text="Sửa thông tin lớp học" />
			</Border>
		</Grid>

		<!--  Picture  -->

		<Grid Grid.Row="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="1.75*" />
				<RowDefinition />
			</Grid.RowDefinitions>

			<Image
            Width="1000"
			Height="300"
			Margin="0 120 0 0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Source="/Assets/Images/EducationBg.png"
            ZIndex="-1" />
		</Grid>

		<DockPanel Grid.Column="1" Margin="0 90 0 0 ">
			<TextBox
				Width="350"
				Height="50"
				Padding="10"
				HorizontalAlignment="Center"
				Margin="10, 10, 10, 0"
				BorderBrush="#48CAE4"
				BorderThickness="3"
				CornerRadius="0"
				Text="{Binding TenLop}"
				Watermark="Nhập tên lớp"
				DockPanel.Dock="Top">
			</TextBox>

			<ComboBox
			    Width="350"
				Height="50"
				Padding="10"
				HorizontalAlignment="Center"
				Margin="10,20,10,0"
				ItemsSource="{Binding KhoisCb}"
				SelectedItem="{Binding MaKhoi}"
				BorderBrush="#48CAE4"
				BorderThickness="3"
				CornerRadius="0"
				PlaceholderText="Khối"
				DockPanel.Dock="Top">
			</ComboBox>

			<ComboBox
			    Width="350"
				Height="50"
				Padding="10"
				HorizontalAlignment="Center"
				Margin="10,20,10,0"		
				BorderBrush="#48CAE4"
				BorderThickness="3"
				CornerRadius="0"
				ItemsSource="{Binding GvcnsCb}"
				SelectedItem="{Binding TenGvcn}"
				PlaceholderText="Giáo viên chủ nhiệm"
				DockPanel.Dock="Top">
			</ComboBox>

		</DockPanel>

		<Grid Grid.Row="2">
			<StackPanel Orientation="Horizontal"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Margin="0,0,0,70">
				<Button
						Width="140"
						Height="40"
						Margin="0 0 10 0"
						Content="Xác nhận"
						Command="{Binding EditCommand}"
						FontSize="19"
						FontWeight="Bold"
						Foreground="#023E8A"
						Background="#48CAE4">
				</Button>
				<Button
						Width="140"
						Height="40"
						Margin="0 0 0 0"
						Content="Hủy"
						FontSize="19"
						FontWeight="Bold"
						Command="{Binding OnCancel}"
                        CommandParameter="{Binding $parent[Window]}"
						Foreground="#023E8A"
						Background="#48CAE4">
				</Button>
			</StackPanel>
		</Grid>
	</Grid>
</Window>
