<UserControl
    x:Class="QuanLySinhVien.Views.MainScreen.ViewResultView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:vm="using:QuanLySinhVien.ViewModels.MainScreen"
    d:DesignHeight="450"
    d:DesignWidth="1000"
    x:DataType="vm:ViewResultViewModel"
    FontFamily="Tahoma"
    mc:Ignorable="d">
    <DockPanel>
        <StackPanel
            Width="200"
            Margin="4,8,8,8"
            HorizontalAlignment="Right"
            Background="#90E0EF"
            DockPanel.Dock="Right" />
        <Grid
            Height="75"
            Margin="8,8,4,4"
            Background="#ADE8F4"
            DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.Styles>
                <Style Selector="TextBlock">
                    <Setter Property="FontSize" Value="20" />
                </Style>
            </Grid.Styles>

            <DockPanel Grid.Row="0">
                <DockPanel.Styles>
                    <Style Selector="Border">
                        <Setter Property="BorderThickness" Value="0 0 0 1" />
                        <Setter Property="BorderBrush" Value="Black" />
                    </Style>

                </DockPanel.Styles>
                <Border DockPanel.Dock="Right">
                    <TextBlock Margin="0,8,8,0" Text="Thời gian hiện tại" />
                </Border>

                <Border>
                    <TextBlock Margin="8,8,0,0" Text="Danh sách công cụ" />
                </Border>


            </DockPanel>

            <DockPanel Grid.Row="1">
                <TextBlock
                    Margin="8"
                    DockPanel.Dock="Right"
                    Text="15:42 24/03/2024" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <StackPanel.Styles>
                        <Style Selector="Button">
                            <Setter Property="Width" Value="50" />
                            <Setter Property="Height" Value="25" />
                        </Style>
                    </StackPanel.Styles>
                    <Button Margin="4,0,0,0" ToolTip.Tip="Thêm kết quả">
                        <ui:IconSourceElement IconSource="Add" />
                    </Button>
                    <Button ToolTip.Tip="Xoá kết quả">
                        <ui:IconSourceElement IconSource="-" />
                    </Button>
                    <Button ToolTip.Tip="Lưu kết quả">
                        <ui:IconSourceElement IconSource="Save" />

                    </Button>
                    <Button ToolTip.Tip="Undo">
                        <ui:IconSourceElement IconSource="Undo" />

                    </Button>
                    <Button ToolTip.Tip="Redo">
                        <ui:IconSourceElement IconSource="Redo" />
                    </Button>

                </StackPanel>
            </DockPanel>

        </Grid>
        <StackPanel
            Margin="8,4,4,8"
            Background="#CAF0F8"
            DockPanel.Dock="Bottom">
            <DataGrid />
        </StackPanel>

    </DockPanel>
</UserControl>
