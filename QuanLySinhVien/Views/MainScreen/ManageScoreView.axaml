<UserControl
    x:Class="QuanLySinhVien.Views.MainScreen.ManageScoreView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:QuanLySinhVien.TemplatedControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:vm="using:QuanLySinhVien.ViewModels.MainScreen"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:ManageScoreViewModel"
    Background="White"
    FontFamily="Tahoma"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Define color resources  -->
        <Color x:Key="PrimaryColor">#023E8A</Color>
        <Color x:Key="SecondaryColor">#48CAE4</Color>
        <Color x:Key="ComboBoxBorderColor">#48CAE4</Color>

        <!--  Define brush resources  -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
        <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="{StaticResource ComboBoxBorderColor}" />

    </UserControl.Resources>

    <!--  Main Grid  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.75*" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  Title and Sort Tools  -->
            <!--  Title  -->
            <Border
                Grid.Row="0"
                Margin="8,12,8,12"
                Background="#48CAE4"
                CornerRadius="25">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="60"
                    FontWeight="Heavy"
                    Foreground="#023E8A"
                    Text="Quản lý điểm số" />
            </Border>

            <!--  Sort Tools  -->
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="16,0,0,8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        FontSize="25"
                        Text="Bảng điểm" />

                    <DockPanel Grid.Row="1" VerticalAlignment="Top">
                        <!--  Academic year's ComboBox  -->
                        <DockPanel.Styles>
                            <Style Selector="ComboBox">
                                <Setter Property="MaxDropDownHeight" Value="100" />
                            </Style>
                        </DockPanel.Styles>

                        <ComboBox
                            Width="200"
                            Height="40"
                            Margin="8,0,0,0"
                            Padding="10"
                            BorderBrush="{StaticResource ComboBoxBorderBrush}"
                            BorderThickness="3"
                            CornerRadius="3"
                            DockPanel.Dock="Left"
                            ItemsSource="{Binding NienKhoasCb}"
                            PlaceholderText="Niên khóa" />

                        <!--  Term's ComboBox  -->
                        <ComboBox
                            Width="125"
                            Height="40"
                            Margin="8,0,0,0"
                            Padding="10"
                            BorderBrush="{StaticResource ComboBoxBorderBrush}"
                            BorderThickness="3"
                            CornerRadius="3"
                            DockPanel.Dock="Left"
                            ItemsSource="{Binding HocKysCb}"
                            PlaceholderText="Học kì" />

                        <!--  Grade's ComboBox  -->
                        <ComboBox
                            Width="100"
                            Height="40"
                            Margin="8,0,0,0"
                            Padding="10"
                            BorderBrush="{StaticResource ComboBoxBorderBrush}"
                            BorderThickness="3"
                            CornerRadius="3"
                            DockPanel.Dock="Left"
                            ItemsSource="{Binding KhoisCb}"
                            PlaceholderText="Khối" />

                        <!--  Class's ComboBox  -->
                        <ComboBox
                            Width="90"
                            Height="40"
                            Margin="8,0,0,0"
                            Padding="10"
                            BorderBrush="{StaticResource ComboBoxBorderBrush}"
                            BorderThickness="3"
                            CornerRadius="3"
                            DockPanel.Dock="Left"
                            ItemsSource="{Binding LopsCb}"
                            PlaceholderText="Lớp" />

                        <!--  Subject's Combobox  -->
                        <ComboBox
                            Width="170"
                            Height="40"
                            Margin="8,0,0,0"
                            Padding="10"
                            BorderBrush="{StaticResource ComboBoxBorderBrush}"
                            BorderThickness="3"
                            CornerRadius="3"
                            DockPanel.Dock="Left"
                            ItemsSource="{Binding MonHocsCb}"
                            PlaceholderText="Môn học" />

                        <!--  Lock score's Button  -->
                        <Button
                            Width="45"
                            Height="45"
                            Margin="8,0,0,0"
                            Background="Transparent"
                            BorderBrush="#48CAE4"
                            BorderThickness="3"
                            Content="🔒"
                            CornerRadius="3"
                            DockPanel.Dock="Left"
                            Foreground="#48CAE4"
                            ToolTip.Tip="Khóa điểm số" />

                        <!--  Unlock score's Button  -->
                        <Button
                            Width="45"
                            Height="45"
                            Margin="8,0,0,0"
                            Background="Transparent"
                            BorderBrush="#48CAE4"
                            BorderThickness="3"
                            Content="🔓"
                            CornerRadius="3"
                            DockPanel.Dock="Left"
                            Foreground="#48CAE4"
                            ToolTip.Tip="Mở khóa điểm số" />

                    </DockPanel>
                </Grid>
            </Grid>


        </Grid>


        <!--  DataGrid  -->
        <DataGrid
            Grid.Row="1"
            Margin="8,15,8,16"
            GridLinesVisibility="Horizontal"
            IsReadOnly="True"
            ItemsSource="{Binding HeThongDiems}">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding MaHocSinh}" Header="Mã học sinh" />

                <DataGridTextColumn
                    Width="1.3*"
                    Binding="{Binding HoTen}"
                    Header="Họ và tên" />

                <DataGridTextColumn
                    Binding="{Binding Diem15Phut}"
                    Header="Điểm 15 phút"
                    IsReadOnly="False" />

                <DataGridTextColumn
                    Binding="{Binding Diem1Tiet}"
                    Header="Điểm 1 tiết"
                    IsReadOnly="False" />

                <DataGridTextColumn Binding="{Binding DiemTb}" Header="Điểm TB" />

                <DataGridTextColumn Header="Xếp loại" Binding="{Binding XepLoai}"/>

                <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" />

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
